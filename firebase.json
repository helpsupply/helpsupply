{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
	    "source": "**",
	    "destination": "/index.html"
    } ]
  },
  "emulators": {
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    }
  }
}
